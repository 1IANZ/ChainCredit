{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "chaincredit",
  "version": "0.1.0",
  "identifier": "com.nian.chaincredit",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Main",
        "width": 960,
        "height": 650,
        "minWidth": 960,
        "minHeight": 650,
        "decorations": false,
        "transparent": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "AlexNian",
    "copyright": "Â© 2025 Alex",
    "category": "Finance",
    "shortDescription": "A decentralized credit analysis and management app built with Tauri and React",
    "longDescription": "ChainCredit is a desktop application built with Tauri and React that helps users securely analyze and manage decentralized trust and credit relationships.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
